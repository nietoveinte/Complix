<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <RelativeLayout

            android:id="@+id/relLayoutTopBarf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/relline"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/relLayoutTopBarf"
            android:weightSum="100">
            <TextView
                android:id="@+id/tvreal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="50"
                android:autoSizePresetSizes="false"
                android:background="#fff"
                android:maxLines="1"
                android:padding="20dp"
                android:paddingRight="0dp"
                android:layout_marginRight="0dp"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvimagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="50"
                android:autoSizePresetSizes="false"
                android:background="@color/colorGreyDesactivado"
                android:maxLength="13"
                android:maxLines="1"
                android:padding="20dp"

                android:paddingRight="0dp"
                android:layout_marginRight="0dp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textSize="20dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/relline"
            android:background="@drawable/white_grey_border_resolve"
            android:id="@+id/linea">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relline2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/linea"
            android:weightSum="100">

            <TextView
                android:id="@+id/tvvector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="45"
                android:autoSizePresetSizes="false"
                android:layout_gravity="end"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="20dp"
                android:paddingRight="0dp"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_icon_angulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="0"
                android:autoSizePresetSizes="false"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="0dp"

                android:paddingRight="0dp"
                android:layout_marginRight="0dp"
                android:text="âˆŸ"
                android:textColor="#3f5c7e"
                android:textAlignment="viewStart"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tvangulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="45"
                android:autoSizePresetSizes="false"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="20dp"

                android:paddingRight="0dp"
                android:layout_marginRight="0dp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textSize="18dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/relline2"
            android:background="@drawable/white_grey_border_resolve"
            android:id="@+id/linea2">

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutNumf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relline2"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_grey_border_bottom_1">


            <LinearLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="1"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:elevation="6dp"
                    android:text="2"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="3"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>


                <Button
                    android:id="@+id/btn_menos_imagi"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="-/+ i"
                    android:textAppearance="@style/Widget.Design.TextInputLayout"
                    android:textSize="24dp"
                    android:textColor="@color/colorLetraiFR"
                    android:theme="@style/BotonMas"
                    android:elevation="0dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/re2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_below="@+id/re1"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="4"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="5"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="6"
                    android:textSize="25dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>



                <Button
                    android:id="@+id/btn_menos_real"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="-/+"
                    android:textAlignment="center"
                    android:textSize="27dp"
                    android:textColor="@color/colorLetraRFR"
                    android:theme="@style/BotonMas"
                    android:elevation="0dp"/>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/re3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re2"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#fff"
                android:weightSum="100">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="7"
                    android:textSize="25dp"
                    android:theme="@style/RaisedButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="8"
                    android:textSize="25dp"
                    android:theme="@style/RaisedButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="25"
                    android:text="9"
                    android:textSize="25dp"
                    android:theme="@style/RaisedButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <ImageButton
                    android:id="@+id/btn_ret"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_arrow_back_dark_98_fr"
                    android:layout_weight="25"
                    android:theme="@style/RaisedButton"/>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/re4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re3"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="97.12"
                    android:text="0"
                    android:textSize="25dp"
                    android:theme="@style/RaisedButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/btn_point"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="2.88"
                    android:text="."
                    android:textSize="20dp"
                    android:theme="@style/RaisedButton"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="25"
                    android:background="@color/colorGrey52"
                    android:text="Clear"
                    android:textSize="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:theme="@style/RaisedButton"/>



            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutBotBarf"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/relLayoutNumf">

            <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:background="@drawable/white_grey_border_bottom_1">

                        <!--<ImageView
                            android:id="@+id/btn_antSegmn"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:src="@drawable/ic_arrow_back_dark_98_fr"
                            android:theme="@style/RaisedButton" />-->

                        <ImageView
                            android:id="@+id/btn_done"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:src="@drawable/ic_done_all_black_1dp"
                            android:theme="@style/RaisedButton"
                            style="@style/Widget.AppCompat.Button.Borderless"/>

<!--
                        <ImageView
                            android:id="@+id/btn_nextSegmn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:src="@drawable/ic_btn_next_98_fr"
                            android:theme="@style/RaisedButton"
                            style="@style/Widget.AppCompat.Button.Borderless"/>-->

                    </LinearLayout>






        </RelativeLayout>


    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>



